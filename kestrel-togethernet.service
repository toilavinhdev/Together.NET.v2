[Unit]
Description=Together.NET.v2 Web API

[Service]
WorkingDirectory=/var/www/Together.NET.v2/Server
ExecStart=/usr/bin/dotnet /var/www/Together.NET.v2/Server/Together.API.dll
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-example
User=root
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target